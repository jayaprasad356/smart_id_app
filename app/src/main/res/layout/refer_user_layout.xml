<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallet_list_bg"
        android:backgroundTint="@color/grayLightColor"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingVertical="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tvMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/poppins_bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_10sdp"
                />

            </LinearLayout>

                <!-- Divider View -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tvRegisterDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/poppins_bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_date"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_10sdp"
                />

            </LinearLayout>

        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallet_list_bg"
        android:backgroundTint="@color/secondaryColor"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/llPlanView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_date"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvFreePlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/free_trail_earnings_30_days"
                android:textColor="@color/logo_blue"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_12sdp"
                />

            <TextView
                android:id="@+id/tvBasicPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/basic_plan_2999"
                android:textColor="@color/logo_blue"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_12sdp"
                />

            <TextView
                android:id="@+id/tvStandardPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/standard_plan_3999"
                android:textColor="@color/logo_blue"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_12sdp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        </LinearLayout>





    </androidx.cardview.widget.CardView>

</RelativeLayout>