                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_10sdp"/>

                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:background="@drawable/box"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wallet Balance"
                                    android:textColor="@color/primaryColor"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/_10sdp"/>

                                <TextView
                                    android:id="@+id/tvBalance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/primaryColor"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold"
                                    tools:text="0" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Today Codes "
                                        android:layout_gravity="start"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total Codes "
                                        android:layout_gravity="start"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="History Days "
                                        android:layout_gravity=""
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Working Codes"
                                        android:layout_gravity=""
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bonus Codes"
                                        android:layout_gravity=""
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>




                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity=""
                                        android:text="Level"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>




                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvTodayCodes"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/tvTotalCodes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:layout_gravity="start"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>


                                    <TextView
                                        android:id="@+id/tvHistorydays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:layout_gravity="start"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>
                                    <TextView
                                        android:id="@+id/tvWorkingCodes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:layout_gravity="start"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"
                                        />

                                    <TextView
                                        android:id="@+id/tvBonusCodes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:layout_gravity="start"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"
                                        />



                                    <TextView
                                        android:id="@+id/tvLevels"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>





                            </LinearLayout>
                            <Button
                                android:id="@+id/btnFindMissing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/yellow"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:textAllCaps="false"
                                android:visibility="gone"
                                android:text="Find Missing"/>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_champion"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvHightlight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Take a trail of champion task"
                            android:textStyle="bold"
                            android:layout_margin="@dimen/_5sdp"
                            android:textColor="#FFC6FD"/>
                        <Button
                            android:id="@+id/btnChampiontask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:backgroundTint="@null"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_gra"
                            android:text="Champion Task"/>
                    </LinearLayout>


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvChampionTask"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Champion Task"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_arrow_back"
                        android:drawablePadding="@dimen/_4sdp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="vihdldrthmqw"
                            android:textAllCaps="true"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold"/>


                        <EditText
                            android:id="@+id/edName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:longClickable="false"
                            android:background="@drawable/ed_bg"
                            android:hint="Enter Name"
                            android:padding="@dimen/_10sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical"

                        >


                        <TextView
                            android:id="@+id/tvId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="hojai"
                            android:textAllCaps="true"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:id="@+id/root_otp_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <EditText
                                android:id="@+id/otp_edit_box1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box2"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box3"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"

                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box4"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"

                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box5"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"

                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box6"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"

                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box7"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"

                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box8"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"

                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box9"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"

                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box10"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1"
                                android:textSize="@dimen/_20sdp" />


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical"

                        >


                        <TextView
                            android:id="@+id/tvCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="hojai"
                            android:textAllCaps="true"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold"/>


                        <EditText
                            android:id="@+id/edCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:longClickable="false"
                            android:background="@drawable/ed_bg"
                            android:hint="Enter Above City location"
                            android:padding="@dimen/_10sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical"

                        >


                        <TextView
                            android:id="@+id/tvPincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="782445"
                            android:textAllCaps="true"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/edPincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ed_bg"
                            android:hint="Enter Above Pin Code"
                            android:inputType="number"
                            android:longClickable="false"
                            android:maxLength="6"
                            android:padding="@dimen/_10sdp" />


                    </LinearLayout>
                    <Button
                        android:id="@+id/btnGenerate"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generate"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_20sdp"
                        android:layout_marginVertical="@dimen/_20sdp"
                        android:backgroundTint="@color/primaryLightColor"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>



</RelativeLayout>