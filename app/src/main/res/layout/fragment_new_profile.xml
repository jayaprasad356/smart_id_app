<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rlMyTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor"
                android:paddingHorizontal="@dimen/_14sdp"
                android:paddingBottom="@dimen/_14sdp">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />


                <LinearLayout
                    android:id="@+id/llProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/profile" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/ivProfile"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_medium"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvMobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvName"
                                android:fontFamily="@font/poppins_medium"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTotalIncome"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:text="Total income"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTotalRecharge"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:text="Total recharge"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTotalAssests"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:text="Total assests"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llWithdraw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTotalWithdrawal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:text="Total withdraw"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTodayIncome"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:text="Today's income"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTeamIncome"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:text="Team income"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>



        <ScrollView
            android:padding="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlHeader">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">


                        <RelativeLayout
                            android:id="@+id/rlInvite"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">



                            <com.google.android.material.card.MaterialCardView
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardBackgroundColor="@color/primaryColor"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp">


                                <ImageView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_4sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_invite"
                                    />


                            </com.google.android.material.card.MaterialCardView>



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Invite Friend"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dividerColor="@color/black"
                                app:dividerThickness="1dp" />

                        </RelativeLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp" />

                        <RelativeLayout
                            android:id="@+id/rlWithdraw"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">



                            <com.google.android.material.card.MaterialCardView
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardBackgroundColor="@color/primaryColor"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_4sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="@dimen/_9sdp"
                                    android:background="@drawable/withdraw_ic"
                                    android:backgroundTint="@color/white"
                                />

                            </com.google.android.material.card.MaterialCardView>




                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Withdrawal"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dividerColor="@color/black"
                                app:dividerThickness="1dp" />

                        </RelativeLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp" />


                        <RelativeLayout
                            android:id="@+id/rlwithdrawhistory"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <com.google.android.material.card.MaterialCardView
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardBackgroundColor="@color/primaryColor"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp">


                                <ImageView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_4sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_paper"
                                    />


                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Withdraw History"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dividerColor="@color/black"
                                app:dividerThickness="1dp" />

                        </RelativeLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp" />

                        <RelativeLayout
                            android:id="@+id/rlhistory"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <com.google.android.material.card.MaterialCardView
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardBackgroundColor="@color/primaryColor"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp">


                                <ImageView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_4sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_transaction"
                                    />


                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="History Transaction"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dividerColor="@color/black"
                                app:dividerThickness="1dp" />

                        </RelativeLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp" />

                        <RelativeLayout
                            android:id="@+id/rlUpdateprofile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <com.google.android.material.card.MaterialCardView
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardBackgroundColor="@color/primaryColor"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_4sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_user"
                                    />


                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="My Profile"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dividerColor="@color/black"
                                app:dividerThickness="1dp" />

                        </RelativeLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp" />

                        <RelativeLayout
                            android:id="@+id/rlChangepassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <com.google.android.material.card.MaterialCardView
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardBackgroundColor="@color/primaryColor"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp">


                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_8sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/lock_ic"
                                    />


                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Set Password"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dividerColor="@color/black"
                                app:dividerThickness="1dp" />

                        </RelativeLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp" />

                        <RelativeLayout
                            android:id="@+id/rlUpdateBank"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <com.google.android.material.card.MaterialCardView
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardBackgroundColor="@color/primaryColor"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_4sdp"
                                    android:layout_margin="@dimen/_7sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/update_bank_ic"
                                    android:backgroundTint="@color/white"
                                    />



                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Update Bank Details"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dividerColor="@color/black"
                                app:dividerThickness="1dp" />

                        </RelativeLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp" />

                        <RelativeLayout
                            android:id="@+id/rlmyBank"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <com.google.android.material.card.MaterialCardView
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardBackgroundColor="@color/primaryColor"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_4sdp"
                                    android:layout_margin="@dimen/_8sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_bank"
                                    android:backgroundTint="@color/white"
                                    />



                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="My Bank Account"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dividerColor="@color/black"
                                app:dividerThickness="1dp" />

                        </RelativeLayout>

                        <Space
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp" />

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/rlRatingIncome"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <com.google.android.material.card.MaterialCardView
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardBackgroundColor="@color/primaryColor"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp">


                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_centerVertical="true"
                                    />


                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Rating Income"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dividerColor="@color/black"
                                app:dividerThickness="1dp" />

                        </RelativeLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp" />

                        <RelativeLayout
                            android:id="@+id/rlCutomerSupport"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerVertical="true"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:fontFamily="@font/poppins_medium"
